<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Home Page</title>
        <style>
            *{
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            }
            table{
                width: 100%;
                margin-top: 20px;
                border-collapse: collapse;
            }
            th,td{
                border: 1px solid #dddddd;
                text-align: center;
                padding: 8px;
            }
            th{
                background-color: #f2f2f2;
            }
        </style>
    </head>
    <body>
        <h1>Generate Short URLs</h1>
        <% if (locals.id) { %>
        <p>URL Generated:

            <a href=" http://localhost:9002/url/<%= id %>">

                http://localhost:9002/url/<%= id %>
            </a>
        </p>
        <p><a href="http://localhost:9002/">Go to Home page</a></p>
        <% } %>
        <form action="/url" method="post">
            <label>Enter URL</label>
            <input type="text" name="url" id="url">
            <button type="submit">Generate Short URL</button>
        </form>

        <section>
            <% if (locals.urls) { %>
            <table>
                <thead>
                    <tr>
                        <th>S.No.</th>
                        <th>ShortId</th>
                        <th>Destination</th>
                        <th>Clicks</th>
                    </tr>
                </thead>
                <tbody>
                    <% urls.forEach((url,index) => { %>
                    <tr>
                        <td><%=index+1 %></td>
                        <td><%= url.shortId %></td>
                        <td><%= url.redirectUrl %></td>
                        <td><%= url.visitHistory.length %></td>

                    </tr>
                    <% }) %>

                </tbody>
            </table>
            <% } %>

        </section>
    </body>
</html>