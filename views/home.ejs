<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>URL Shortener</title>
        <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            /* Add more styles as needed for a better layout */
        }
        h1 {
            /* Add styling for the heading */
        }
        form {
            /* Add styling for the form */
        }
        table {
            /* Add styling for the table */
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            /* Add styling for table headers and cells */
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }
        th {
            /* Additional styling for table headers */
            background-color: #f2f2f2;
        }
    </style>
    </head>
    <body>
        <h1>URL Shortener</h1>
        <% if (locals.id) { %>
        <p>URL Generated: http://localhost:9001/url/<%= id %></p>
        <% } %>
        <div>
            <form method="POST" action="/url">
                <label for="url">Enter your original URL</label>
                <input type="text" placeholder="https://example.com/" name="url"
                    id="url">
                <button type="submit">Generate</button>
            </form>
        </div>
        <div>
            <% if (locals.urls) { %>
            <table>
                <thead>
                    <tr>
                        <th>S.No.</th>
                        <th>ShortID</th>
                        <th>Redirect</th>
                        <th>Clicks</th>
                    </tr>
                </thead>
                <tbody>
                    <% urls.forEach((url, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= url.shortId %></td>
                        <td><%= url.redirectUrl %></td>
                        <td><%= url.visitHistory.length %></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
            <% } %>
        </div>
    </body>
</html>
